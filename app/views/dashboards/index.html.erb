<div class="pagetitle">
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item active">Home</li>
    </ol>
  </nav>
</div><!-- End Page Title -->

<section class="section dashboard">
  <div class="row">

    <!-- Left side columns -->
    <div class="col-lg-8">
      <div class="row">
        <%= render 'dashboards/reports/amount_card', filter: 'income', amount: amount_to_currency(@income_amount) %>
        <%= render 'dashboards/reports/amount_card', filter: 'expense', amount: amount_to_currency(@expense_amount) %>
        <%= render 'dashboards/reports/balance_card', amount: amount_to_currency(@balance_amount) %>
        <%= render 'dashboards/reports/cashflow_report' %>
        <%= render 'dashboards/reports/recent_transactions' %>
      </div>
    </div><!-- End Left side columns -->

    <!-- Right side columns -->
    <div class="col-lg-4">
      <%= render 'dashboards/reports/recent_activities' %>
      <%= render 'dashboards/reports/expense_category_report' %>
    </div><!-- End Right side columns -->
  </div>
</section>

