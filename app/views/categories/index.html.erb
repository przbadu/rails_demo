<div class="pagetitle">
  <h1>Categories</h1>
  <nav>
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to 'Home', root_path, class: 'breakcrumb-item' %>
      </li>
      <li class="breadcrumb-item active">Categories</li>
    </ol>
  </nav>
</div><!-- End Page Title -->

<section class="section">
  <div class="row">
    <div class="col-6">

      <div class="card">

        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">

            <h5 class="card-title">CATEGORY LIST</h5>
            <%= link_to "ADD NEW CATEGORY", new_category_path %>
          </div>

          <table class='table'>
            <thead>
              <tr>
                <th>
                  Name
                </th>
                <th></th>
              </tr>
            </thead>

            <tbody>
              <% @categories.each do |category| %>
                <tr>
                  <td>
                    <div class="d-flex align-items-center">
                      <%= render 'shared/avatar_icon', color: category.color, icon: category.icon %>
                      <%= category.name %>
                    </div>
                  </td>
                  <td>
                    <%= link_to edit_category_path(category), class: 'text-info' do %>
                      <i class="bi bi-pencil"></i>
                    <% end %> &nbsp;

                    <%= link_to category_path(category), class: 'text-danger', data: { turbo_method: :delete } do %>
                      <i class="bi bi-trash"></i>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>

