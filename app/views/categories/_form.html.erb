<div class="col-6">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Vertical Form</h5>

      <%= form_with(model: category) do |form| %>
        <% if category.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
              <% category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-12">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>


        <div class="col-12" data-controller="color-picker">
          <%= form.label :color, class: "form-label" %>
          <%= form.text_field :color, class: 'form-control',
            placeholder: 'color', data: { target: 'color-picker.input' } %>
          <div class="color-picker-wrapper">
            <% generate_random_colors.each do |color| %>
              <a
                  class='color-picker-item'
                  style="background-color: #<%= color %>"
                  data-normal="value"
                  data-color="<%= color %>"
                  data-action="color-picker#click">
              </a>
            <% end %>
          </div>
        </div>

        <div class="col-12">
          <%= form.label :icon, class: "form-label" %>
          <%= form.text_field :icon, class: 'form-control' %>
        </div>


        <div>
          <%= form.submit nil, class: 'btn btn-success mt-2' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

