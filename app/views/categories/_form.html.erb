<div class="col-6">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"></h5>

      <%= form_with(model: category) do |form| %>
        <% if category.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

            <ul>
              <% category.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="col-12 mb-2">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: 'form-control' %>
        </div>

        <div class="col-12 mb-2" data-controller="color-picker">
          <%= form.label :color, class: "form-label" %>
          <%= form.hidden_field :color,
            class: 'form-control',
            placeholder: 'color', data: { target: 'color-picker.input' }
          %>
          <%= render 'shared/color_pickers', selected: form.object.color, colors: @random_colors %>
        </div>

        <div class="col-12" data-controller="icon-picker">
          <%= form.label :icon, class: "form-label" %>
          <%= form.hidden_field :icon, class: 'form-control', data: { target: 'icon-picker.input' } %>
          <%= render 'shared/icon_pickers', selected: form.object.icon, icons: CATEGORY_ICONS %>
        </div>

        <div>
          <%= form.submit nil, class: 'btn btn-success mt-2' %>
        </div>
      <% end %>

    </div>
  </div>
</div>

